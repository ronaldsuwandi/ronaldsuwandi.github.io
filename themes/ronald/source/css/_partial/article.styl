.l-article
  margin-top 15px
  margin-bottom 15px
  padding 0
  color color-font

  .l-gallery
    overflow hidden
    position relative
    &:hover
      .control
        opacity 1
  img
    margin-top 15px

.article
  text-align left
  @media (max-width:767px)
    // full width on vertical tablet and phone
    width 100%

.article-header-title
  font-weight normal

.l-article-header-underline
  padding-bottom 10px
  margin-top 20px
.article-header-underline
  border-bottom 1px solid color-border

.l-article-header-title
  margin 0 0 10px 0

.article-header-time
  font-size 0.8em
  line-height 1em
  color color-meta
  @media (max-width: 767px)
    font-size 0.8em
  .article-header-time-link
    color inherit

.external-link
  font-size 0.4em
  vertical-align top


// content
.l-article-content
  padding 10px 0
  blockquote
    padding 0 30px 15px
  footer
    margin 20px 0 0
    padding-top 0
    cite
      &:before
        padding 0 0.5em
  code
    padding 0 5px
    margin 0 2px

  pre
    margin-top 15px
    overflow auto
    padding 7px 15px
    code
      padding 0
      margin 0

  .caption
    margin-top 5px
    position relative
    padding-left 25px
    &:before
      content '\f040'
      position absolute
      font 1.3em font-icon
      position absolute
      left 0
      top 3px

  .video-container
    position relative
    padding-bottom 56.25%
    padding-top 30px
    height 0
    overflow hidden
    iframe, object, embed
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      margin-top 0

  .pullquote
    float right
    border none
    padding 0
    margin 1em 0 0.5em 1.5em

.article-content
  // line-height 1.8em
  // font-size 18px
  blockquote
    font-style italic
    font-family font-serif
    font-size 1em
    line-height 1.5em
    text-align center
    footer
      border-top none
      font-size 0.8em
      line-height 1em
      cite
        &:before
          content '—'
          color #ccc
    p:before
      content '“ '
      color #c8c8c8
      font-size 1.5em
      line-height 1em
    p:after
      content ' ”'
      color #c8c8c8
      font-size 1.5em
      line-height 1em

  code, pre
    font-family font-mono

  code
    background #eee
    color #666
    font-size 0.9em
    border 1px solid color-border
    border-radius 3px

  pre
    background #eee
    border 1px solid color-border
    border-radius 2px
    code
      background none
      border none
      border-radius 0

  h1, h2
    font-weight normal

  h3, h4, h5, h6
    font-weight normal

  img, video
    max-width 100%
    height auto
    border none

  iframe
    border none

  .pullquote
    border none
    text-align left
    width 45%
    font-size 1.5em

// more
.l-more-link
  margin-top 1em

.more-link
  color color-meta
  font-size 0.9em
  &:hover
    color color-link
    text-decoration none

// work
.l-work-item-list
  margin 0 auto
.l-work-logo
  margin 5px 10px
.work-logo
  width 148px
  height 148px
  border-radius 148px

.l-work-item-link
  display inline-block

.l-work-item-container
  display inline-block
  margin 20px
.work-item-container
  text-align center
  width 250px
  &:hover
    background-color #f2f2f2
  &:active
    background-color #fffcbf

.l-work-item-title
.work-item-title
  font-family font-title
  font-size 1em
  margin 0

.l-work-item-description
.work-item-description
  font-size 0.8em
  color color-font


// footer
.l-article-footer
  margin-top 15px
  padding-top 10px
  position relative

.article-footer
  border-top 1px solid color-border
  color color-meta
  font-size 0.9em
  line-height 16px
  min-height 16px
  a
    color color-meta
    &:hover
      color color-link
      text-decoration none
    &:before
      font 1.1em font-icon
      padding-right 10px
      vertical-align middle



.l-article-footer
  .l-icon
    margin-right 5px

.article-footer-content-left
  max-width 67%
.article-footer-content-right
  max-width 31%


.share
  text-align right
  font-size 0.8em
  color color-footer
  text-transform uppercase

.l-social-menu-icon
  margin-right 10px
  vertical-align middle
.social-menu-icon
  width 23px
  height 23px

.l-social-menu-icon-feed
  vertical-align middle
.social-menu-icon-feed:before
  font 23px font-icon
  line-height 23px
  content '\f09e'
  color #da6a25
  &:hover
    text-decoration none
    color #da6a25
  &:active
    color #da6a25

.l-screenshot
  margin-top 20px
  margin-bottom 20px

.article-content
  .about-img-container
    text-align center
  img.about-img
    border 1px solid #c1c1c1