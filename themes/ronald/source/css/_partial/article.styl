.l-article
  margin-top 15px
  margin-bottom 15px
  padding 0
  color color-font

  .l-post-content-footer
    margin-top 15px
    padding-top 10px
    position relative

  .l-gallery
    overflow hidden
    position relative
    &:hover
      .control
        opacity 1

.l-article-header-title
  margin 0 0 10px 0

.article-header-time
  font-size 1em
  line-height 1em
  color color-article-header
  @media (max-width: 767px)
    font-size 0.8em
  .article-header-time-link
    color inherit

.external-link
  font-size 0.4em
  vertical-align top

.article
  text-align left
  line-height 1.5em

  @media (max-width:767px)
    // full width on vertical tablet and phone
    width 100%


// content
.l-article-content
  blockquote
    padding 0 30px 15px
  footer
    margin 20px 0 0
    padding-top 0
    cite
      &:before
        padding 0 0.5em
  p:before
    float left
  p:after
    float right
  code
    padding 0 5px
    margin 0 2px

  pre
    margin-top 15px
    overflow auto
    padding 7px 15px
    code
      padding 0
      margin 0

  h1, h2
    border-bottom 1px solid color-border
    padding-bottom 10px
    margin-top 20px

  .caption
    margin-top 5px
    position relative
    padding-left 25px
    &:before
      content '\f040'
      position absolute
      font 1.3em font-icon
      position absolute
      left 0
      top 3px

  .video-container
    position relative
    padding-bottom 56.25%
    padding-top 30px
    height 0
    overflow hidden
    iframe, object, embed
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      margin-top 0

  .pullquote
    float right
    border none
    padding 0
    margin 1em 0 0.5em 1.5em

.article-content
  blockquote
    font-style italic
    font-family font-serif
    font-size 1.1em
    text-align center
    footer
      border-top none
      font-size 0.8em
      line-height 1em
      cite
        &:before
          content '—'
          color #ccc
    p:before
      content '“'
      color #c8c8c8
      font-size 2em
      line-height 1em
    p:after
      content '”'
      color #c8c8c8
      font-size 2em
      line-height 1em

  code, pre
    font-family font-mono

  code
    background #eee
    color #666
    font-size 0.9em
    border 1px solid color-border
    border-radius 3px

  pre
    background #eee
    border 1px solid color-border
    border-radius 2px
    code
      background none
      border none
      border-radius 0

  h1, h2
    font-weight normal
    border-bottom 1px solid color-border

  h3, h4, h5, h6
    font-weight normal

  img, video
    max-width 100%
    height auto
    border none

  iframe
    border none

  .pullquote
    border none
    text-align left
    width 45%
    font-size 1.5em


// more
.l-more-link
  margin-top 1em

.more-link
  color color-meta
  font-size 0.9em
  &:hover
    color color-link
    text-decoration none

.post-content-footer
  border-top 1px solid color-border
  color color-meta
  font-size 0.9em
  line-height 16px
  min-height 16px
  a
    color color-meta
    &:hover
      color color-link
      text-decoration none
    &:before
      font 1.1em font-icon
      padding-right 10px
      vertical-align middle


.comment
  &:before
    font 1.1em font-icon
    content '\f075'

.categories, .tags
  &:before
    font 1.1em font-icon

.l-post-content-footer
  .categories, .tags
    position relative
    padding-left 25px
    margin 5px 0
    &:before
      position absolute

  .categories
    &:before
      content '\f07b'
      top 0
      left 1px

  .tags
    &:before
      content '\f02b'
      top 0
      left 2px

.l-share
  margin-top 2em
  iframe
    margin-top 0
.share
  text-align right
  font-size 1em
  color color-meta

.l-share-icon
  margin-left 5px
  display inline-block
  // up to vertical tablet
  @media (max-width: 768px)
    margin-left 12px
.share-icon
  width 16px
  height 16px
  background color-background
  // up to vertical tablet
  @media (max-width: 768px)
    width 20px
    height 20px


.l-social-menu-icon
  margin-right 10px
  vertical-align middle
.social-menu-icon
  width 23px
  height 23px

.l-social-menu-icon-feed
  vertical-align middle
.social-menu-icon-feed:before
  font 23px font-icon
  line-height 23px
  content '\f09e'
  color #da6a25
  &:hover
    text-decoration none
    color #da6a25
  &:active
    color #da6a25

.l-screenshot
  margin-top 20px
  margin-bottom 20px
